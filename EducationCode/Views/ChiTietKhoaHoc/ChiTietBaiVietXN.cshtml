@using EducationCode.Models;
@model List<BAIHOC>
@{
    ViewBag.Title = "ChiTietBaiVietXN";
    Layout = "~/Views/Layout/Layout.cshtml";
}

<section class="w3l-content-6">
    <!-- /content-6-section -->
    <div class="content-6-mian py-5">
        <div class="container py-lg-5">
            <div class="content-info-in row mt-md-5 mt-4">

                @foreach (var item in Model)
                {
                    <div class="col-lg-3 col-md-6 imghrs" style="margin-top:1%;float:left;width:35%">
                        <a class="imghr" href="#">
                            <img src="~/Content/assets/images/@item.ANHBAIHOC" style="height:270px" class="img-fluid" alt="">
                            <div class="details"><span class="title">@item.TENBAIHOC</span><span class="info">@item.TACGIA</span></div>
                        </a>
                    </div>
                    <div style="width:60%;float:right;">
                        <span style="font-size:36px; color:blue">@item.TENBAIHOC</span>
                        <br />
                        <span>Tác giả:@item.TACGIA</span>
                        <br />
                        <span>Tóm tắt:  @item.NOIDUNG</span>

                    </div>
                }s
            </div>
        </div>
    </div>
</section>
